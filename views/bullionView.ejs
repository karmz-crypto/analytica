<div class="container my-2">
  <!--<li class="list-group-item list-group-item-primary">Bullion Pending Transction List</li>-->
  <div class="accordion" id="bullionPendingTransaction">
    <div class="accordion-item">
      <h2 class="accordion-header" id="bullionPendingHeading">
        <button class="accordion-button pendingTransacAccordian" type="button" data-bs-toggle="collapse" data-bs-target="#bullionPendingCollapse" aria-expanded="true" aria-controls="bullionPendingCollapse" onclick="decoPendingTransactionSummary()">
          <span class="text-capitalize pendingTransactionCollapseFalse d-none">
             verify the completion of the pending bullion transaction process
          </span><br>
          <span class="pendingTransactionCollapseTrue text-capitalize d-none">
            Incomplete Transactions : <span class="badge bg-danger mx-3"><%=pendingTransactionBullionData.length%></span>
          </span>
        </button>
      </h2>
      <div id="bullionPendingCollapse" class="accordion-collapse collapse show" aria-labelledby="bullionPendingHeading" data-bs-parent="#bullionPendingTransaction">
        <div class="accordion-body bg-secondary">
         <% if(pendingTransactionBullionData.length!==0){pendingTransactionBullionData.forEach((data)=>{%>
          <li class="list-group-item-light list-group-item mb-3 shadow rounded p-3">
            Date:<span class="mx-2 fw-bold"><%=data.date.toDateString()%></span><br>
            Transaction Type:<span class="mx-2 fw-bold"><%=data.transactionType%></span><br>
            Trader Name:<span class="mx-2 fw-bold"><%=data.client.bullionClientName %></span><br>
            Bullion Wt. :<span class="mx-2 fw-bold"><%=data.bullionWeight %></span>Grms<br>
            Bullion Rate: <span class="mx-2 fw-bold"><%=data.bullionRateOfCurrentTransaction%></span>Rupees<br>
            Cash Payment:<span class="mx-2 fw-bold"> <%=data.cashPaymentOfCurrentTransaction%> </span>Rupees<br>
            <hr>
            <a href="/bullion/<%=data._id%>/updateTransction" style="text-decoration: none;">Complete Transaction</a> 
          </li>
          <%})}else{%>
            <li class="list-group-item-light list-group-item">
              No Pending Transaction Present .........
            </li>
            
            <%}%>
        </div>
      </div>
    </div>
  </div>
</div>
<div class="container my-2">
  <div class="row">
    <div class="col-md-6 col-sm-12 my-2">
      <div class="accordion" id="bullionStock">
        <div class="accordion-item">
          <h2 class="accordion-header" id="bullionStockHeading">
            <button class="accordion-button" type="button" data-bs-toggle="collapse" data-bs-target="#bullionStockCollapse" aria-expanded="true" aria-controls="bullionStockCollapse">
              Bullion Stock Summary : Only Complete Bullion Transactions
            </button>
          </h2>
          <div id="bullionStockCollapse" class="accordion-collapse collapse show" aria-labelledby="bullionStockHeading" data-bs-parent="#bullionStock">
            <div class="accordion-body bg-secondary">
              <li class="list-group-item list-group-item-light mb-2 shadow rounded p-3 bg-light 9999BullionStockList">
                <span class="fw-bold text-danger no9999BullionStock">No 9999 Bullion Stock</span>
                <% bullionStock.forEach((element)=>{%>
                  <%if(element.bullionType==='9999_bullion' && element.totalBullionStock===0){%>
                    9999 Bullion Stock : <span class="mx-2 fw-bold bullion9999Tag absentClass">No Stock Present</span><%}else if(element.bullionType==='9999_bullion' && element.totalBullionStock!==0){%>
                    9999 Bullion Stock :<span class="mx-2 fw-bold bullion9999Tag presentClass"><%=element.totalBullionStock%></span>Grms
                  <%}})%>
                <hr>
                <a class="bullion9999TransactionLink" href="/bullion/bullionTransactionView/9999_bullion" style="text-decoration: none";>View 9999 Bullion Transaction</a>
              </li>

              <li class="list-group-item list-group-item-light mb-2 shadow rounded p-3 bg-white choursaStockList">
                <span class="fw-bold text-danger noChoursaStock">No Choursa Stock Present</span>
                <% bullionStock.forEach((element)=>{%>
                  <%if(element.bullionType==='choursa' && element.totalBullionStock===0){%>
                    Choursa Bullion Stock : <span class="mx-2 fw-bold choursaTag absentClass">No Stock Present</span><%}else if(element.bullionType==='choursa' && element.totalBullionStock!==0){%>
                    Choursa Bullion Stock :<span class="mx-2 fw-bold choursaTag presentClass"><%=element.totalBullionStock%></span>Grms

                  <%}})%>
                  <hr>
                  <a class="choursaTransactionLink" href="/bullion/bullionTransactionView/choursa" style="text-decoration: none";>View Choursa Bullion Transaction</a>
              </li>

              <li class="list-group-item list-group-item-light mb-2 shadow rounded p-3 bg-light kachiStockList">
                <span class="fw-bold text-danger noKachiStock">No Kachi Stock Present</span>
                <% bullionStock.forEach((element)=>{%>
                  <%if(element.bullionType==='kachi'&& element.totalBullionStock===0){%>
                    Kachi Bullion Stock : <span class="mx-2 fw-bold kachiTag absentClass">NO Stock Present</span> <%}else if(element.bullionType==='kachi'&& element.totalBullionStock!==0){%>
                    Kachi Bullion Stock : <span class="mx-2 fw-bold kachiTag presentClass"><%=element.totalBullionStock%></span>Grms
                <%}})%>
                <hr>
                  <a class="kachiTransactionLink" href="/bullion/bullionTransactionView/kachi" style="text-decoration: none";>View Kachi Bullion Transaction</a>
              </li>
            </div>
          </div>
        </div>
      </div><!--carousel begings here-->
      <div class="carousalAvtive">
        <div id="carouselExampleSlidesOnly" class="carousel slide" data-bs-ride="carousel">
          <div class="carousel-inner p-3">
            <div class="carousel-item active">
              <% bullionStock.forEach((element)=>{%>
                <%if(element.bullionType==='kachi'&& element.totalBullionStock===0){%>
                  Kachi Bullion Stock : <span class="mx-2 fw-bold kachiTag absentClass">NO Stock Present</span> <%}else if(element.bullionType==='kachi'&& element.totalBullionStock!==0){%>
                  Kachi Bullion Stock : <span class="mx-2 fw-bold kachiTag presentClass"><%=element.totalBullionStock%></span>Grms
              <%}})%>
            </div>
            <div class="carousel-item">
              <% bullionStock.forEach((element)=>{%>
                <%if(element.bullionType==='choursa' && element.totalBullionStock===0){%>
                  Choursa Bullion Stock : <span class="mx-2 fw-bold choursaTag absentClass">No Stock Present</span><%}else if(element.bullionType==='choursa' && element.totalBullionStock!==0){%>
                  Choursa Bullion Stock :<span class="mx-2 fw-bold choursaTag presentClass"><%=element.totalBullionStock%></span>Grms

                <%}})%>
            </div>
            <div class="carousel-item">
              <% bullionStock.forEach((element)=>{%>
                <%if(element.bullionType==='9999_bullion' && element.totalBullionStock===0){%>
                  9999 Bullion Stock : <span class="mx-2 fw-bold bullion9999Tag absentClass">No Stock Present</span><%}else if(element.bullionType==='9999_bullion' && element.totalBullionStock!==0){%>
                  9999 Bullion Stock :<span class="mx-2 fw-bold bullion9999Tag presentClass"><%=element.totalBullionStock%></span>Grms
                <%}})%>
            </div>
          </div>
        </div>
      </div><!--carousel ends here-->
    </div>
  </div>
</div>
