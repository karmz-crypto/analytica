    <li class="list-group-item-action list-group-item list-group-item-success" style="cursor: pointer;"  data-bs-toggle="collapse" data-bs-target="#bullionRate" aria-expanded="false" aria-controls="bullionRate">
        <span class="mx-2">
            <svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" fill="currentColor" class="bi bi-hand-index-thumb" viewBox="0 0 16 16">
